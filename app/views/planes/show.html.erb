<h1>This is my show for a plane</h1>

<h2><%= @plane.plane_name %></h2>
<p><%= @plane.plane_type %></p>
<p><%= @plane.location %></p>
<p><%= @plane.capacity %></p>
<p><%= @plane.price %></p>
<p><%= @plane.available %></p>


<% if policy(@plane).edit? %>
<p><%= link_to "Update", edit_plane_path(@plane) %></p>
<p><%= link_to 'Destroy', @plane, method: :delete, data: { confirm: 'Are you sure ?' } %></p>
<% end %>

<p><%= link_to "All planes", planes_path %> </p>
